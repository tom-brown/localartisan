<h1>Listing users</h1>

<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Email</th>
    <th>Address</th>
    <th>City</th>
    <th>State</th>
    <th>Zip</th>
	  <th>Neighborhood</th>
    <th>Seller</th>
    <th>Bio</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.first_name %></td>
    <td><%= user.last_name %></td>
    <td><%= user.email %></td>
    <td><%= user.address %></td>
    <td><%= user.city %></td>
    <td><%= user.state_id %></td>
    <td><%= user.zip %></td>
    <td><%= Neighborhood.find(user.neighborhood_id).name %></td>
    <td><%= user.seller %></td>>
    <td><%= user.bio %></td>
    <td><%= link_to 'Show', user_url(user.id) %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

